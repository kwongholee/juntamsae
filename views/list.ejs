<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JUNTAMSAE</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <h1>Login List for Manager</h1>

    <div>
      <div>
        <button id="register" class="btn btn-secondary">등록 순 나열</button>
        <button id="name" class="btn btn-danger">이름 순 나열</button>
        <button id="attendance" class="btn btn-primary">출석 순 나열</button>
      </div>

      <% for(let i = 0; i < result.length; i++) { %>
        <div>
          <h3>Name: <%= result[i].name %></h3>
          <h3>Number of Attendance: <%= result[i].num %></h3>
          <h3>Answer of last Quiz: <%= result[i].answer %></h3>
          <button id="plus" data-id="<%= result[i]._id %>" class="btn btn-primary">+</button>
          <button id="minus" data-id="<%= result[i]._id %>" class="btn btn-danger">-</button>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    document.querySelector('#plus').addEventListener('click', (e) => {
      fetch('/list/answer/true/' + e.target.dataset.id, {
        method: 'PUT',
      })
      .then(() => {
        location.reload();
      })
      .catch((a,b,c) => {
        console.log(a,b,c);
      })
    })

    document.querySelector('#minus').addEventListener('click', (e) => {
      fetch('/list/answer/false/' + e.target.dataset.id, {
        method: 'PUT',
      })
      .then(() => {
        location.reload();
      })
      .catch((a,b,c) => {
        console.log(a,b,c);
      })
    })

    document.querySelector('#register').addEventListener('click', () => {
      fetch('/list/register')
      .then(() => {
        window.location.replace('/list/register')
      })
      .catch((a,b,c) => {
        console.log(a,b,c);
      })
    })

    document.querySelector('#name').addEventListener('click', () => {
      fetch('/list/name')
      .then(() => {
        window.location.replace('/list/name')
      })
      .catch((a,b,c) => {
        console.log(a,b,c);
      })
    })

    document.querySelector('#attendance').addEventListener('click', () => {
      fetch('/list/attendance')
      .then(() => {
        window.location.replace('/list/attendance')
      })
      .catch((a,b,c) => {
        console.log(a,b,c);
      })
    })
  </script>
</body>
</html>